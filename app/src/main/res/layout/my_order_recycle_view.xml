<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color"
        android:padding="2dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/my_order_recycle_view_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:src="@drawable/fastfood"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />


        <TextView
            android:id="@+id/my_order_item_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
           android:layout_toLeftOf="@id/txt_tk_2"
            android:layout_toRightOf="@+id/my_order_recycle_view_image"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:text="Burger"
            android:textColor="@color/orange1"

            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_tk_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_tk"
            android:layout_toStartOf="@+id/total_order_single_item_rv"
            android:text="৳"
            android:textColor="@color/orange1"

            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_order_single_item_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_tk"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:text="500"
            android:textColor="@color/orange1"

            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_tk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@+id/price_my_order_rv"
            android:text="৳"
            android:textColor="@color/orange1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/price_my_order_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="5dp"
            android:text="500 x2"
            android:textColor="@color/orange1"
            android:textSize="12sp" />




    </RelativeLayout>


</androidx.cardview.widget.CardView>