<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/history_recycle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color"
        android:padding="2dp">

        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            android:paddingRight="2dp"
            android:text="Status:"
            android:textColor="@color/orange"
            android:textSize="13sp"
         />
        <TextView
            android:id="@+id/order_request_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
          android:layout_toRightOf="@+id/txt4"
            android:paddingRight="2dp"
            android:text="paid"
            android:textColor="@color/orange1"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/txt_tk_5"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_tk_3"
            android:text="Payment Amount:"
            android:textColor="@color/orange"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/txt_tk_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_tk_5"
           android:layout_below="@+id/txt_tk_3"
            android:text="à§³"
            android:textColor="@color/orange1"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/total_payment_amount_db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_tk_3"
            android:layout_toRightOf="@+id/txt_tk_2"
            android:layout_marginEnd="5dp"
            android:text="5000"
            android:textColor="@color/orange1"
            android:textSize="12sp"
             />

        <TextView
            android:id="@+id/delivery_request_accept_btn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_request_status"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/received_btn"
            android:paddingLeft="5dp"
            android:textAlignment="center"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:text="Accept"
            android:textColor="@color/white"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/complete_processing"
            android:layout_width="60dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_request_status"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/received_btn"
            android:paddingLeft="5dp"
            android:textAlignment="center"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:text="Complete"
            android:textColor="@color/white"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/view_order_request"
            android:layout_width="35dp"
            android:paddingLeft="5dp"
            android:visibility="visible"
            android:layout_height="20dp"
           android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/received_btn"
            android:textAlignment="center"
            android:drawableLeft="@drawable/ic_hide"
            android:textColor="@color/white"
             />
        <TextView
            android:id="@+id/txt_tk_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mobile:"
            android:layout_marginLeft="3dp"
            android:textColor="@color/orange"
            android:layout_below="@+id/order_request_status"
            android:textSize="12sp"
           />

        <TextView
            android:id="@+id/order_request_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_tk_3"
           android:layout_below="@+id/order_request_status"
            android:layout_weight="1"
            android:paddingRight="2dp"
            android:layout_marginLeft="2dp"
            android:text="01717268128"
            android:textColor="@color/orange1"
            android:textSize="12sp"
            />



    </RelativeLayout>


</androidx.cardview.widget.CardView>